<Page x:Class="UtaitePlayer.Layout.Page.UtaitePlayerHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      
      
      xmlns:local="clr-namespace:UtaitePlayer.Layout.Page"
    
      
      mc:Ignorable="d" 
      
      d:DesignHeight="584" d:DesignWidth="613"
      
      Title="UtaitePlayerHomePage"
      
      Loaded="Page_Loaded">

    <Grid>
        <!-- Root panel -->
        <Grid>
            <!-- ScrollViewer -->
            <hc:ScrollViewer
                x:Name="rootHomeScrollViewer"
                Resources="{StaticResource HandyControlThemes}">

                <!-- ScrollViewer Root Panel -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!-- 최신 우타이테 Panel -->
                    <Grid>
                        <!-- Title -->
                        <TextBlock
                            Text="최신 우타이테"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="16"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="10,10,0,0" 
                            HorizontalAlignment="Left" />

                        <!-- All music play button -->
                        <Button
                            Resources="{StaticResource HandyControlThemes}"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top" 
                            Margin="0,3,10,0" 
                            Click="AllMusicPlayButtonForNewUtaite_Click">

                            <StackPanel
                                Orientation="Horizontal">

                                <Path		                       
                                    Width="8"
			                        Height="10"
			                        Data="M17.2,8.6L4.8,1.4C3.7,0.8,2.4,1.6,2.4,2.8v14.3c0,1.2,1.3,2,2.4,1.4l12.4-7.2C18.2,10.7,18.2,9.2,17.2,8.6z"
                                    Fill="White"
                                    Stretch="Fill"/>

                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="9"
                                    Foreground="{DynamicResource Color_White1}"
                                    Text="전체 재생" 
                                    Margin="5,0,0,0" />
                            </StackPanel>
                        </Button>

                        <!-- Table -->
                        <ListBox
                            x:Name="newUtaiteListBox"
                            BorderThickness="0" 
                            Resources="{StaticResource HandyControlThemes}"
                            Margin="0,45,0,0"
                            VerticalAlignment="Top"
                            Height="170"
                            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                            VirtualizingPanel.VirtualizationMode="Standard"
                            VirtualizingPanel.IsVirtualizing="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                            PreviewMouseWheel="newUtaiteListBox_PreviewMouseWheel" 
                            PreviewMouseDoubleClick="newUtaiteListBox_PreviewMouseDoubleClick">

                            <!-- ListBox Horizontal Panel -->
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel
                                        Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Stretch" 
                                        Height="160"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <!-- ListBox ContextMenu -->
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem 
                                        Header="현재 플레이리스트에 담기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="AddMusicMyPlayListMenuItemForNewUtaite_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_playlist.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem 
                                        Header="사용자 플레이리스트에 담기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="AddMusicCustomMyPlayListMenuItemForNewUtaite_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_playlist.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem
                                        Header="노래 정보 보기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="ShowMusicInfoMenuItemForNewUtaite_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_info.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </ListBox.ContextMenu>

                            <!-- ListBox ItemTemplate -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Width="120"
                                        Height="150"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0,10,0,0">

                                        <!-- Music Image -->
                                        <Image
                                            Margin="0"
                                            Stretch="UniformToFill"
                                            Source="{Binding bitmapImage}" 
                                            Width="120" 
                                            Height="120"
                                            VerticalAlignment="Top" 
                                            HorizontalAlignment="Center"/>

                                        <!-- Music Name -->
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            FontFamily="/Resources/font/#esamanru Light"
                                            FontSize="10"
                                            Foreground="{DynamicResource Color_White1}"
                                            Margin="0,10,0,15" 
                                            Text="{Binding musicName}" />

                                        <!-- Artist Name -->
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            FontFamily="/Resources/font/#esamanru Light"
                                            FontSize="8"
                                            Foreground="{DynamicResource Color_White3}"
                                            Margin="0,0,0,3" 
                                            Text="{Binding artistName}" />

                                        <!-- Click Rect -->
                                        <Rectangle 
                                            Fill="{DynamicResource Color_White1}"
                                            Opacity="0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <!-- 노래가 가장 많은 아티스트 리스트 Panel -->
                    <Grid 
                        Grid.Row="1">

                        <!-- Title -->
                        <TextBlock
                            Text="노래가 가장 많은 아티스트"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="16"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="10,10,0,0" 
                            HorizontalAlignment="Left" />

                        <!-- Table -->
                        <DataGrid
                            x:Name="manyMusicListDataGrid"
                            BorderBrush="{x:Null}"
                            HorizontalContentAlignment="Stretch" 
                            AutoGenerateColumns="False"
                            IsSynchronizedWithCurrentItem="False"
                            SelectionMode="Single" 
                            CanUserAddRows="False"
                            Margin="0,45,0,0"
                            Grid.Row="1"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="12"
                            Resources="{StaticResource HandyControlThemes}"
                            ScrollViewer.CanContentScroll="False" 
                            HorizontalScrollBarVisibility="Disabled" 
                            VerticalScrollBarVisibility="Disabled" 
                            Background="{x:Null}" 
                            PreviewMouseWheel="manyMusicListDataGrid_PreviewMouseWheel">

                            <DataGrid.Columns>
                                <!-- 순위 -->
                                <DataGridTextColumn
                                    Width="50"
                                    Header="순위"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Binding="{Binding musicCountRank}" 
                                    CanUserSort="False"
                                    IsReadOnly="True"/>

                                <!-- TemplateColumn -->
                                <DataGridTemplateColumn
                                    IsReadOnly="True" 
                                    CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image
                                                Stretch="UniformToFill"
                                                Source="{Binding bitmapImage}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="30"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 아티스트 이름 -->
                                <DataGridTextColumn
                                    Width="1.5*"
                                    Header="아티스트 이름"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Binding="{Binding artistName}" 
                                    IsReadOnly="True"/>

                                <!-- 노래 개수 -->
                                <DataGridTextColumn
                                    Width="*"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Header="노래 개수"
                                    Binding="{Binding musicCount}" 
                                    IsReadOnly="True"/>

                                <!-- TemplateColumn -->
                                <DataGridTemplateColumn
                                    IsReadOnly="True" 
                                    CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Grid.Column="1"
                                                Height="20"
		                                        Width="20"
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Bottom"
                                                MouseLeftButtonDown="manyMusicLinkDataGrid_MouseLeftButtonDown">

                                                <Grid.Background>
                                                    <ImageBrush ImageSource="/UtaitePlayer;component/Resources/drawable/ic_go.png"/>
                                                </Grid.Background>

                                                <hc:Poptip.Instance>
                                                    <hc:Poptip
                                                        Resources="{StaticResource HandyControlThemes}"
                                                        Content="바로가기" 
                                                        PlacementType="TopLeft"
                                                        FontFamily="/Resources/font/#esamanru Light"
                                                        FontSize="12"
                                                        Foreground="{StaticResource Color_White1}"/>
                                                </hc:Poptip.Instance>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- 사용자별 가장 많이 듣는 노래 가사별 유사도 Top30 우타이테 리스트 Panel -->
                    <Grid
                         Grid.Row="2">

                        <!-- Title -->
                        <TextBlock
                            Text="즐겨듣는 우타이테와 유사한 가사"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="16"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="10,10,0,0" 
                            HorizontalAlignment="Left" />

                        <!-- No Data Panel -->
                        <Grid
                            x:Name="userManyPlayNgramForLyricsNoData"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,15">

                            <svgc:SvgViewbox 
                                Source="/Resources/drawable/img_character_1.svg"
                                Margin="0,0,0,15" 
                                Width="170"
                                Height="130" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>

                            <!-- Title -->
                            <TextBlock
                                Text="데이터가 존재하지 않습니다."
                                VerticalAlignment="Bottom"
                                TextWrapping="Wrap"
                                FontFamily="/Resources/font/#esamanru Medium"
                                FontSize="16"
                                Foreground="{DynamicResource Color_White1}"
                                Margin="0" 
                                HorizontalAlignment="Center" />
                        </Grid>

                        <!-- Table -->
                        <ListBox
                            x:Name="userManyPlayNgramForLyricsListBox"
                            BorderThickness="0" 
                            Resources="{StaticResource HandyControlThemes}"
                            Margin="0,45,0,0"
                            VerticalAlignment="Top"
                            Height="170"
                            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            VirtualizingPanel.IsVirtualizing="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                            PreviewMouseWheel="userManyPlayNgramForLyricsListBox_PreviewMouseWheel" 
                            PreviewMouseDoubleClick="userManyPlayNgramForLyricsListBox_PreviewMouseDoubleClick">

                            <!-- ListBox Horizontal Panel -->
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel
                                        Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Stretch" 
                                        Height="160"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <!-- ListBox ContextMenu -->
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem 
                                        Header="현재 플레이리스트에 담기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="AddMusicMyPlayListMenuItemForUserManyPlayNgramForLyricsListBox_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_playlist.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem 
                                        Header="사용자 플레이리스트에 담기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="AddMusicCustomMyPlayListMenuItemForUserManyPlayNgramForLyricsListBox_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_playlist.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem
                                        Header="노래 정보 보기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="ShowMusicInfoMenuItemForUserManyPlayNgramForLyricsListBox_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_info.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </ListBox.ContextMenu>

                            <!-- ListBox ItemTemplate -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Width="120"
                                        Height="150"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0,10,0,0">

                                        <!-- Music Image -->
                                        <Image
                                            Margin="0"
                                            Stretch="UniformToFill"
                                            Source="{Binding bitmapImage}" 
                                            Width="120" 
                                            Height="120"
                                            VerticalAlignment="Top" 
                                            HorizontalAlignment="Center"/>

                                        <!-- Music Name -->
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            FontFamily="/Resources/font/#esamanru Light"
                                            FontSize="10"
                                            Foreground="{DynamicResource Color_White1}"
                                            Margin="0,10,0,15" 
                                            Text="{Binding musicName}" />

                                        <!-- Artist Name -->
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            FontFamily="/Resources/font/#esamanru Light"
                                            FontSize="8"
                                            Foreground="{DynamicResource Color_White3}"
                                            Margin="0,0,0,3" 
                                            Text="{Binding artistName}" />

                                        <!-- Click Rect -->
                                        <Rectangle 
                                            Fill="{DynamicResource Color_White1}"
                                            Opacity="0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <!-- 인기 우타이테 리스트 Panel -->
                    <Grid 
                        Grid.Row="3">

                        <!-- Title -->
                        <TextBlock
                            Text="인기 우타이테"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="16"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="10,10,0,0" 
                            HorizontalAlignment="Left" />

                        <!-- All music play button -->
                        <Button
                            Resources="{StaticResource HandyControlThemes}"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top" 
                            Margin="0,3,10,0" 
                            Click="AllMusicPlayButtonForTopUtaite_Click">

                            <StackPanel
                                Orientation="Horizontal">

                                <Path		                       
                                    Width="8"
			                        Height="10"
			                        Data="M17.2,8.6L4.8,1.4C3.7,0.8,2.4,1.6,2.4,2.8v14.3c0,1.2,1.3,2,2.4,1.4l12.4-7.2C18.2,10.7,18.2,9.2,17.2,8.6z"
                                    Fill="White"
                                    Stretch="Fill"/>

                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="9"
                                    Foreground="{DynamicResource Color_White1}"
                                    Text="전체 재생" 
                                    Margin="5,0,0,0" />
                            </StackPanel>
                        </Button>

                        <!-- Table -->
                        <DataGrid
                            x:Name="topUtaiteListDataGrid"
                            BorderBrush="{x:Null}"
                            HorizontalContentAlignment="Stretch" 
                            AutoGenerateColumns="False"
                            IsSynchronizedWithCurrentItem="False"
                            SelectionMode="Single" 
                            CanUserAddRows="False"
                            Margin="5,45,5,0"
                            Grid.Row="1"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="12"
                            Resources="{StaticResource HandyControlThemes}"
                            ScrollViewer.CanContentScroll="False" 
                            HorizontalScrollBarVisibility="Disabled" 
                            VerticalScrollBarVisibility="Disabled" 
                            Background="{x:Null}" 
                            PreviewMouseWheel="topUtaiteListDataGrid_PreviewMouseWheel">

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem 
                                        Header="현재 플레이리스트에 담기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12" 
                                        Click="AddMusicMyPlayListMenuItemForTopUtaite_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_playlist.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem 
                                        Header="사용자 플레이리스트에 담기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="AddMusicCustomMyPlayListMenuItemForTopUtaite_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_playlist.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem
                                        Header="노래 정보 보기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Click="ShowMusicInfoMenuItemForTopUtaite_Click">

                                        <MenuItem.Icon>
                                            <Image 
                                                Height="15"
                                                Width="15"
                                                Source="/UtaitePlayer;component/Resources/drawable/ic_info.png"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.Columns>
                                <!-- 순위 -->
                                <DataGridTextColumn
                                    Width="50"
                                    Header="순위"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Binding="{Binding musicRank}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>

                                <!-- TemplateColumn -->
                                <DataGridTemplateColumn
                                    IsReadOnly="True" 
                                    CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image
                                                Stretch="UniformToFill"
                                                Source="{Binding bitmapImage}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="30"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 노래 이름 -->
                                <DataGridTextColumn
                                    Width="1.5*"
                                    Header="제목"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Binding="{Binding musicName}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>

                                <!-- 아티스트 -->
                                <DataGridTextColumn
                                    Width="*"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Header="아티스트"
                                    Binding="{Binding artistName}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>

                                <!-- 태그 -->
                                <DataGridTextColumn
                                    Width="*"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Header="태그"
                                    Binding="{Binding musicTag}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>

                                <!-- 작곡가 -->
                                <DataGridTextColumn
                                    Width="*"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Header="작곡가"
                                    Binding="{Binding musicWriter}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>

                                <!-- TemplateColumn -->
                                <DataGridTemplateColumn
                                    IsReadOnly="True" 
                                    CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <!-- Play button -->
                                            <Grid
                                                Grid.Column="1"
                                                Height="20"
		                                        Width="20"
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Bottom"
                                                Background="Transparent">

                                                <Path
                                                    MouseLeftButtonDown="PlayButtonForTopUtaite_MouseLeftButtonDown"
			                                        Width="14"
			                                        Height="18"
			                                        Data="M17.2,8.6L4.8,1.4C3.7,0.8,2.4,1.6,2.4,2.8v14.3c0,1.2,1.3,2,2.4,1.4l12.4-7.2C18.2,10.7,18.2,9.2,17.2,8.6z"
                                                    Fill="White"
                                                    Stretch="Fill">

                                                    <hc:Poptip.Instance>
                                                        <hc:Poptip
                                                            Resources="{StaticResource HandyControlThemes}"
                                                            Content="재생" 
                                                            PlacementType="TopLeft"
                                                            FontFamily="/Resources/font/#esamanru Light"
                                                            FontSize="12"
                                                            Foreground="{StaticResource Color_White1}"/>
                                                    </hc:Poptip.Instance>
                                                </Path>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- 분위기별 우타이테 리스트 Panel -->
                    <Grid
                         Grid.Row="4">

                        <!-- Title -->
                        <TextBlock
                            Text="분위기별 우타이테"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Medium"
                            FontSize="16"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="10,10,0,0" 
                            HorizontalAlignment="Left" />

                        <!-- All music play button -->
                        <Button
                            Resources="{StaticResource HandyControlThemes}"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top" 
                            Margin="0,3,10,0" 
                            Click="AllMusicPlayButtonForTypeUtaite_Click">

                            <StackPanel
                                Orientation="Horizontal">

                                <Path		                       
                                    Width="8"
			                        Height="10"
			                        Data="M17.2,8.6L4.8,1.4C3.7,0.8,2.4,1.6,2.4,2.8v14.3c0,1.2,1.3,2,2.4,1.4l12.4-7.2C18.2,10.7,18.2,9.2,17.2,8.6z"
                                    Fill="White"
                                    Stretch="Fill"/>

                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="9"
                                    Foreground="{DynamicResource Color_White1}"
                                    Text="전체 재생" 
                                    Margin="5,0,0,0" />
                            </StackPanel>
                        </Button>

                        <!-- Music type selecter -->
                        <hc:TagContainer
                            VerticalAlignment="Top"
                            Margin="10,40,0,0"
                            HorizontalAlignment="Left"
                            BorderBrush="{x:Null}"
                            Foreground="{x:Null}">

                            <hc:Tag 
                                x:Name="musicTag_1"
                                IsSelected="True"
                                ShowCloseButton="False"
                                Content="#신남" 
                                PreviewMouseLeftButtonDown="musicTag_PreviewMouseLeftButtonDown"/>
                            <hc:Tag
                                x:Name="musicTag_2"
                                ShowCloseButton="False"
