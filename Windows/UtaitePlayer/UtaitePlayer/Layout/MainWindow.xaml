<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        
    
        xmlns:local="clr-namespace:UtaitePlayer.Layout"
        xmlns:utils="clr-namespace:UtaitePlayer.Classes.Utils"
        xmlns:controls="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    
    
        x:Class="UtaitePlayer.Layout.MainWindow"
        
        mc:Ignorable="d"
        
        Title="우타이테 플레이어 (Utaite Player)" 
        
        Icon="/UtaitePlayer.ico"
        
        WindowStartupLocation="CenterScreen"
        
        Height="750" Width="1141"
        MinHeight="750" MinWidth="1141"

        Loaded="Window_Loaded" 
        StateChanged="Window_StateChanged" 
        Closing="Window_Closing">

    <!-- Root Resources -->
    <Window.Resources>
        <!-- Add playlist ContextMenu -->
        <ContextMenu 
            x:Key="MyInfoContextMenu" 
            Resources="{StaticResource HandyControlThemes}">
            
            <MenuItem
                Header="플레이리스트에 추가"
                FontFamily="/Resources/font/#esamanru Light"
                FontSize="12"
                Click="AddMyPlaylist_MenuitemRootPanel_Click"/>
        </ContextMenu>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="CustomWindowTitleBarStyle"/>
    </Window.Style>

    <i:Interaction.Behaviors>
        <utils:MouseLeftButtonContextMenuSupportBehavior/>
    </i:Interaction.Behaviors>

    <Grid Loaded="Grid_Loaded" 
          Background="{DynamicResource Color_Gray3}">

        <!-- ColumnDefinitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition Width="0.65*" MinWidth="280" MaxWidth="345"/>
        </Grid.ColumnDefinitions>

        <!-- RowDefinitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Background 1 -->
        <Rectangle
            Grid.RowSpan="2" 
            Grid.Column="1" 
            Fill="{DynamicResource Color_Gray7}"/>

        <!-- Drawer / Music Info (노래 정보) -->
        <hc:Drawer 
            Name="DrawerRightForMusicInfo" 
            Dock="Left"
            ShowMode="Cover"
            Closed="Drawer_Closed">

            <Border 
                Background="{DynamicResource Color_Gray1}" 
                Width="310">

                <Grid>
                    <!-- Drawer 닫기 버튼 -->
                    <Button
                        Height="16"
                        Width="16"
                        Command="hc:ControlCommands.Close"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top" 
                        Margin="0,15,15,0">

                        <Button.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                                <Setter Property="Foreground" Value="{DynamicResource Color_White1}" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <!-- Button - Mouse color event Triggers -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>

                        <Path
                            Stretch="Fill"
			                Width="15"
			                Height="15"
			                Data="M 18,11 27,20 M 18,20 27,11"
			                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			                StrokeThickness="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                    </Button>

                    <!-- Icon -->
                    <Image
                        VerticalAlignment="Top"
                        Margin="10,15,0,0" 
                        HorizontalAlignment="Left"
                        Width="20"
                        Height="20" 
                        Source="/UtaitePlayer;component/Resources/drawable/ic_info.png" />

                    <!-- Title -->
                    <TextBlock
                        Text="노래 정보"
                        VerticalAlignment="Top"
                        TextWrapping="Wrap"
                        FontFamily="/Resources/font/#esamanru Medium"
                        FontSize="16"
                        Foreground="{DynamicResource Color_White1}"
                        Margin="35,15,0,0" 
                        HorizontalAlignment="Left" />

                    <!-- Loading ProgressBar -->
                    <hc:CircleProgressBar
                        x:Name="x_DrawerRightForMusicInfo_LoadingProgressBar"
                        Resources="{StaticResource HandyControlThemes}"
                        IsIndeterminate="True" 
                        Visibility="Collapsed"
                        Width="60"
                        Height="60"/>

                    <!-- Info panel -->
                    <Grid
                        x:Name="x_DrawerRightForMusicInfo_InfoPanel"
                        Margin="0,40,0,0">

                        <!-- Music Image -->
                        <Image
                            x:Name="x_DrawerRightForMusicInfo_MainMusicImage"
                            Margin="20,15,0,0"
                            Stretch="UniformToFill"
                            Source="/UtaitePlayer;component/Resources/drawable/img_no_data.png" 
                            Width="90" 
                            Height="90"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"/>

                        <!-- Music Title -->
                        <TextBlock
                            x:Name="x_DrawerRightForMusicInfo_MainMusicTitle"
                            VerticalAlignment="Top"
                            FontFamily="/Resources/font/#esamanru Light"
                            FontSize="16"
                            MaxHeight="57"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="120,15,20,0"
                            TextWrapping="Wrap"
                            TextTrimming="CharacterEllipsis"/>

                        <!-- Artist Name -->
                        <TextBlock
                            x:Name="x_DrawerRightForMusicInfo_MainMusicArtist"
                            VerticalAlignment="Top"
                            FontFamily="/Resources/font/#esamanru Light"
                            FontSize="12"
                            Foreground="{DynamicResource Color_Gray4}"
                            Margin="120,77,20,0"
                            TextWrapping="Wrap"
                            TextTrimming="CharacterEllipsis" 
                            Height="28"/>

                        <!-- Music Play Button -->
                        <Button
                            x:Name="x_DrawerRightForMusicInfo_MusicPlayButton"
                            HorizontalAlignment="Stretch"
                            Margin="18,120,18,0"
                            Resources="{StaticResource HandyControlThemes}"
                            FontFamily="/Resources/font/#esamanru Light"
                            FontSize="13"
                            Grid.Row="0"
                            VerticalAlignment="Top" 
                            Click="x_DrawerRightForMusicInfo_MusicPlayButtonClick">

                            <Grid>
                                <Path
			                        Width="10"
			                        Height="14"
			                        Data="M17.2,8.6L4.8,1.4C3.7,0.8,2.4,1.6,2.4,2.8v14.3c0,1.2,1.3,2,2.4,1.4l12.4-7.2C18.2,10.7,18.2,9.2,17.2,8.6z"
                                    Fill="White"
                                    Stretch="Fill" 
                                    Margin="0,0,30,0"/>

                                <TextBlock
                                    Text="재생"
                                    VerticalAlignment="Top"
                                    TextWrapping="Wrap"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="14"
                                    Foreground="{DynamicResource Color_White1}"
                                    Margin="30,0,0,0" 
                                    HorizontalAlignment="Left" />
                            </Grid>
                        </Button>

                        <!-- ScrollViewer -->
                        <hc:ScrollViewer
                            Resources="{StaticResource HandyControlThemes}"
                            Margin="0,160,0,0">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Lyrics Title -->
                                <TextBlock
                                    Grid.Row="0"
                                    Text="가사"
                                    VerticalAlignment="Top"
                                    TextWrapping="Wrap"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="14"
                                    Foreground="{DynamicResource Color_White1}"
                                    Margin="20,15,0,0" 
                                    HorizontalAlignment="Left" />

                                <!-- Lyrics Data -->
                                <TextBlock
                                    x:Name="x_DrawerRightForMusicInfo_LyricsData"
                                    Grid.Row="1"
                                    MaxHeight="350"
                                    VerticalAlignment="Top"
                                    TextWrapping="Wrap"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="11"
                                    Foreground="{DynamicResource Color_White1}"
                                    Margin="20,10,20,0" 
                                    Text="가사 없음" />

                                <!-- Lyrics More Button -->
                                <TextBlock
                                    x:Name="x_DrawerRightForMusicInfo_MoreLyricsTextBox"
                                    Grid.Row="2"
                                    Text="더보기"
                                    VerticalAlignment="Top"
                                    TextWrapping="Wrap"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="10"
                                    Foreground="{DynamicResource Color_Gray4}"
                                    Margin="20,5,20,0"
                                    MouseLeftButtonDown="x_DrawerRightForMusicInfo_MoreLyricsTextBox_MouseLeftButtonDown" />

                                <!-- Credit Title -->
                                <TextBlock
                                    Grid.Row="3"
                                    Text="크레딧"
                                    VerticalAlignment="Top"
                                    TextWrapping="Wrap"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="14"
                                    Foreground="{DynamicResource Color_White1}"
                                    Margin="20,20,0,0" 
                                    HorizontalAlignment="Left" />

                                <!-- Credit Data Panel -->
                                <Grid
                                    Grid.Row="4"
                                    Margin="0,0,0,20">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Credit Data / 아티스트 -->
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="아티스트:"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="20,10,0,0" 
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"/>
                                    <TextBlock
                                        x:Name="x_DrawerRightForMusicInfo_CreditData_Artist"
                                        Grid.Column="1"
                                        Text="데이터 없음"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="5,10,20,0"
                                        TextTrimming="CharacterEllipsis"/>

                                    <!-- Credit Data / 작곡가 -->
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="작곡가:"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="20,25,0,0" 
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"/>
                                    <TextBlock
                                        x:Name="x_DrawerRightForMusicInfo_CreditData_SongWriter"
                                        Grid.Column="1"
                                        Text="데이터 없음"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="5,25,20,0"
                                        TextTrimming="CharacterEllipsis"/>

                                    <!-- Credit Data / 장르 -->
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="장르:"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="20,40,0,0" 
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"/>
                                    <TextBlock
                                        x:Name="x_DrawerRightForMusicInfo_CreditData_Type"
                                        Grid.Column="1"
                                        Text="데이터 없음"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="5,40,20,0"
                                        TextTrimming="CharacterEllipsis"/>

                                    <!-- Credit Data / 업로드 날짜 -->
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="업로드 날짜:"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="20,55,0,0" 
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"/>
                                    <TextBlock
                                        x:Name="x_DrawerRightForMusicInfo_CreditData_UploadDate"
                                        Grid.Column="1"
                                        Text="데이터 없음"
                                        VerticalAlignment="Top"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="10"
                                        Foreground="{DynamicResource Color_White1}"
                                        Margin="5,55,20,0"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Grid>
                        </hc:ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </hc:Drawer>

        <!-- Drawer / 플레이리스트 편집 -->
        <hc:Drawer 
            Name="DrawerRightForEditMyPlaylist" 
            Dock="Left"
            ShowMode="Cover"
            Closed="Drawer_Closed">
            
            <Border
                Background="{DynamicResource Color_Gray1}" 
                Width="310">

                <Grid>
                    <!-- Drawer 닫기 버튼 -->
                    <Button
                        Height="16"
                        Width="16"
                        Command="hc:ControlCommands.Close"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top" 
                        Margin="0,15,15,0">

                        <Button.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                                <Setter Property="Foreground" Value="{DynamicResource Color_White1}" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <!-- Button - Mouse color event Triggers -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>

                        <Path
                            Stretch="Fill"
			                Width="15"
			                Height="15"
			                Data="M 18,11 27,20 M 18,20 27,11"
			                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			                StrokeThickness="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                    </Button>

                    <!-- Icon -->
                    <Image
                        VerticalAlignment="Top"
                        Margin="10,15,0,0" 
                        HorizontalAlignment="Left"
                        Width="20"
                        Height="20" 
                        Source="/UtaitePlayer;component/Resources/drawable/ic_edit.png"/>

                    <!-- Title -->
                    <TextBlock
                        Text="플레이리스트 편집"
                        VerticalAlignment="Top"
                        TextWrapping="Wrap"
                        FontFamily="/Resources/font/#esamanru Medium"
                        FontSize="16"
                        Foreground="{DynamicResource Color_White1}"
                        Margin="45,15,0,0" 
                        HorizontalAlignment="Left" />

                    <!-- Loading ProgressBar -->
                    <hc:CircleProgressBar
                        x:Name="x_DrawerRightForEditMyPlaylist_LoadingProgressBar"
                        Resources="{StaticResource HandyControlThemes}"
                        IsIndeterminate="True" 
                        Visibility="Collapsed"
                        Width="60"
                        Height="60"/>

                    <Grid 
                        x:Name="x_DrawerRightForEditMyPlaylist_RootGrid">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <!-- Playlist Image -->
                        <Image
                            x:Name="x_DrawerRightForEditMyPlaylist_PlaylistImage"
                            Margin="80,80,80,0"
                            Stretch="UniformToFill"
                            Source="/UtaitePlayer;component/Resources/drawable/img_no_data.png" 
                            Width="150" 
                            Height="150"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"/>

                        <TextBlock
                            Text="플레이리스트 이름"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Light"
                            FontSize="10"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="23,284,0,0" 
                            HorizontalAlignment="Left" />

                        <TextBlock
                            x:Name="x_DrawerRightForEditMyPlaylist_PlaylistNameCount"
                            Text="0/40 글자"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Light"
                            FontSize="10"
                            Foreground="{DynamicResource Color_Gray4}"
                            Margin="0,284,22,0" 
                            HorizontalAlignment="Right" />

                        <hc:TextBox
                            x:Name="x_DrawerRightForEditMyPlaylist_PlaylistNameTextbox"
                            Margin="20,300,20,0"
                            Resources="{StaticResource HandyControlThemes}" 
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            HorizontalContentAlignment="Stretch"
                            FontFamily="/UtaitePlayer;component/Resources/font/#esamanru Light"
                            FontSize="12"
                            Height="auto"
                            MaxLength="40" 
                            TextChanged="x_DrawerRightForEditMyPlaylist_PlaylistNameTextbox_TextChanged">

                            <hc:TextBox.ContextMenu>
                                <!-- TextBox Contextbox Menu -->
                                <ContextMenu>
                                    <MenuItem
                                        Header="잘라내기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Command="ApplicationCommands.Cut"/>

                                    <MenuItem
                                        Header="복사"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Command="ApplicationCommands.Copy"/>

                                    <MenuItem
                                        Header="붙여넣기"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="12"
                                        Command="ApplicationCommands.Paste"/>
                                </ContextMenu>
                            </hc:TextBox.ContextMenu>
                        </hc:TextBox>

                        <TextBlock
                            Text="플레이리스트 이미지"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap"
                            FontFamily="/Resources/font/#esamanru Light"
                            FontSize="10"
                            Foreground="{DynamicResource Color_White1}"
                            Margin="23,15,0,0" 
                            HorizontalAlignment="Left"
                            Grid.Row="1" />

                        <ListBox
                            x:Name="x_DrawerRightForEditMyPlaylist_ImageSelectListBox"
                            BorderThickness="0" 
                            Resources="{StaticResource HandyControlThemes}"
                            Margin="20,35,20,30"
                            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                            VirtualizingPanel.VirtualizationMode="Standard"
                            VirtualizingPanel.IsVirtualizing="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                            PreviewMouseDoubleClick="x_DrawerRightForEditMyPlaylist_ImageSelectListBox_PreviewMouseDoubleClick" 
                            Grid.Row="1"
                            Height="auto">

                            <!-- ListBox Horizontal Panel -->
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:VirtualizingWrapPanel
                                        Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <!-- ListBox ItemTemplate -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Width="100"
                                        Height="100"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                        <Image
                                            Stretch="UniformToFill"
                                            Source="{Binding image}"
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center" 
                                            Margin="5"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button
                            x:Name="x_DrawerRightForEditMyPlaylist_SaveButton"
                            Grid.Row="2"
		                    RenderOptions.EdgeMode="Aliased" 
                            VerticalAlignment="Bottom" 
                            Height="32" 
                            Width="Auto" 
                            Margin="45,0,45,25" 
                            Click="x_DrawerRightForEditMyPlaylist_SaveButton_Click">

                            <!-- Grid trigger -->
                            <Button.Style>
                                <!-- Button style -->
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="{StaticResource Color_Gray3}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border
                                                    CornerRadius="15"
                                                    Background="{TemplateBinding Background}">

                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True" >
                                            <Setter Property="Background" Value="{StaticResource Color_Black1}" />
                                            <Setter Property="Opacity" Value="0.7" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True" >
                                            <Setter Property="Background" Value="{StaticResource Color_Black1}" />
                                            <Setter Property="Opacity" Value="0.9" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <StackPanel Orientation="Horizontal">
                                <Image
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="17"
                                    Height="17" 
                                    Source="/UtaitePlayer;component/Resources/drawable/ic_save.png"/>

                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontFamily="/Resources/font/#esamanru Light"
                                    FontSize="11"
                                    Foreground="{DynamicResource Color_White1}"
                                    Text="변경사항 저장" 
                                    Margin="10,0,0,0" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </hc:Drawer>

        <!-- Drawer / 플레이리스트 생성 -->
        <hc:Drawer 
            Name="DrawerRightForCreateMyPlaylist" 
            Dock="Left"
            ShowMode="Cover"
            Closed="Drawer_Closed">

            <Border
                Background="{DynamicResource Color_Gray1}" 
                Width="310">

                <Grid>
                    <!-- Drawer 닫기 버튼 -->
                    <Button
                        Height="16"
                        Width="16"
                        Command="hc:ControlCommands.Close"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top" 
                        Margin="0,15,15,0">

                        <Button.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                                <Setter Property="Foreground" Value="{DynamicResource Color_White1}" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <!-- Button - Mouse color event Triggers -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>

                        <Path
                            Stretch="Fill"
			                Width="15"
			                Height="15"
			                Data="M 18,11 27,20 M 18,20 27,11"
			                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			                StrokeThickness="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                    </Button>

                    <!-- Icon -->
                    <Image
                        VerticalAlignment="Top"
