            <!-- 닫기 버튼 -->
            <Button
                x:Name="closeButton"
                Height="auto"
		        Width="auto" 
                Click="closeButton_Click">

                <Path
			        Width="46"
			        Height="32"
			        Data="M 18,11 27,20 M 18,20 27,11"
			        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			        StrokeThickness="1" />
            </Button>

