                                        </Style>
                                    </Grid.Style>

                                    <TextBlock
                                        Text="{Binding name}"
                                        VerticalAlignment="Center"
                                        TextWrapping="NoWrap"
                                        FontFamily="/Resources/font/#esamanru Light"
                                        FontSize="11"
                                        Foreground="{DynamicResource Color_White1}" 
                                        Margin="10,0,10,0"
                                        TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
